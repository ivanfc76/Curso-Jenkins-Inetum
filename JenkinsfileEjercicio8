pipeline{    
  agent any  
  stages
    {
        stage("LeerFichero")
        {
            steps
            {
                script
                {
variable_fichero = readFile(file:"\\jenkins.txt")
            lines = variable_fichero.readLines()
            numero1 = lines[0].toInteger()
            numero2 = lines[1].toInteger()
              
suma = numero1 + numero2
resta = numero1 - numero2
multiplicacion = numero1 * numero2
division = numero1 / numero2
potencia = numero1 * numero1
  cadena = "Suma = ${suma}  , Resta =${resta} , multiplicacion = ${multiplicacion} , division= ${division} , potencia=${potencia}" 
    println cadena      
                }
            }
        }
        
    }
}
